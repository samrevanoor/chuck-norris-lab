<!DOCTYPE html>
<html>

<head>
  <title>Chuck Norris Joke</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body class="container">
  <h1 class="jumbotron text-center">
    Chuck Norris Jokes
  </h1>
  <h3 class="col-xs-6 col-xs-offset-4">Choose Category:</h3>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-4">
      <form action="/" method="GET">
        <% categories.forEach(function(category){ %>
          <div class="radio">
            <label>
              <input type="radio" name="category" value="<%= category %>" <%= category===categoryChosen ? 'checked' : "" %>>
            <%= category %>
            </label>
          </div>
        <% }) %>
        <br>
        <button class="btn btn-success" type="submit">Get Chuck Norris Joke</button>
      </form>
    </div>
  </div>
  <br>
  <div class="col-xs-6 col-xs-offset-3">
    <h4 style="text-decoration: underline;">
      <%= categoryChosen %>
    </h4>
    <h5 style="color:rgb(20, 104, 160); font-weight: bold;">
      <%= jokeData %>
    </h5>
  </div>
</body>

</html>